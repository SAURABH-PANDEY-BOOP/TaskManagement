CREATE PROCEDURE [dbo].[USP_Task_Delete]
(
    @TaskId INT
)
AS
BEGIN
    SET NOCOUNT ON;

    DELETE FROM Tasks
    WHERE TaskId = @TaskId;

    SELECT @@ROWCOUNT AS RowsAffected;
END;
GO
