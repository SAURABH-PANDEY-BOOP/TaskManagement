/****** Object:  StoredProcedure [dbo].[USP_Task_Search]    Script Date: 1/10/2026 12:42:45 AM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[USP_Task_Search]
(
    @SearchText NVARCHAR(200)
)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT *
    FROM Tasks
    WHERE
        TaskTitle       LIKE '%' + @SearchText + '%'
        OR TaskDescription LIKE '%' + @SearchText + '%'
        OR TaskStatus      LIKE '%' + @SearchText + '%'
    ORDER BY CreatedOn DESC;
END;
GO
/****** Object:  StoredProcedure [dbo].[USP_Task_Update]    Script Date: 1/10/2026 12:42:45 AM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[USP_Task_Update]
(
    @TaskId          INT,
    @TaskTitle       NVARCHAR(200),
    @TaskDescription NVARCHAR(MAX) = NULL,
    @TaskDueDate     DATETIME      = NULL,
    @TaskStatus      NVARCHAR(50),
    @TaskRemarks     NVARCHAR(500) = NULL,
    @UpdatedById     INT,
    @UpdatedByName   NVARCHAR(100)
)
AS
BEGIN
    SET NOCOUNT ON;

    UPDATE Tasks
    SET
        TaskTitle       = @TaskTitle,
        TaskDescription = @TaskDescription,
        TaskDueDate     = @TaskDueDate,
        TaskStatus      = @TaskStatus,
        TaskRemarks     = @TaskRemarks,
        LastUpdatedOn   = GETDATE(),
        UpdatedById     = @UpdatedById,
        UpdatedByName   = @UpdatedByName
    WHERE TaskId = @TaskId;

    SELECT @@ROWCOUNT AS RowsAffected;
END;
