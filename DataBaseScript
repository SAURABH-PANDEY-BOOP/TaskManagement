/****** Object:  Table [dbo].[Tasks]    Script Date: 1/10/2026 12:42:44 AM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[Tasks](
	[TaskId] [int] IDENTITY(1,1) NOT NULL,
	[TaskTitle] [nvarchar](200) NOT NULL,
	[TaskDescription] [nvarchar](max) NULL,
	[TaskDueDate] [datetime] NULL,
	[TaskStatus] [nvarchar](50) NOT NULL,
	[TaskRemarks] [nvarchar](500) NULL,
	[CreatedOn] [datetime] NOT NULL,
	[LastUpdatedOn] [datetime] NULL,
	[CreatedById] [int] NOT NULL,
	[CreatedByName] [nvarchar](100) NOT NULL,
	[UpdatedById] [int] NULL,
	[UpdatedByName] [nvarchar](100) NULL,
PRIMARY KEY CLUSTERED 
(
	[TaskId] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY] TEXTIMAGE_ON [PRIMARY]
GO
ALTER TABLE [dbo].[Tasks] ADD  DEFAULT (getdate()) FOR [CreatedOn]
GO
/****** Object:  StoredProcedure [dbo].[USP_Task_Create]    Script Date: 1/10/2026 12:42:44 AM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[USP_Task_Create]
(
    @TaskTitle       NVARCHAR(200),
    @TaskDescription NVARCHAR(MAX) = NULL,
    @TaskDueDate     DATETIME      = NULL,
    @TaskStatus      NVARCHAR(50),
    @TaskRemarks     NVARCHAR(500) = NULL,
    @CreatedById     INT,
    @CreatedByName   NVARCHAR(100)
)
AS
BEGIN
    SET NOCOUNT ON;

    INSERT INTO Tasks
    (
        TaskTitle,
        TaskDescription,
        TaskDueDate,
        TaskStatus,
        TaskRemarks,
        CreatedOn,
        CreatedById,
        CreatedByName
    )
    VALUES
    (
        @TaskTitle,
        @TaskDescription,
        @TaskDueDate,
        @TaskStatus,
        @TaskRemarks,
        GETDATE(),
        @CreatedById,
        @CreatedByName
    );

    SELECT CAST(SCOPE_IDENTITY() AS INT) AS TaskId;
END;
GO
/****** Object:  StoredProcedure [dbo].[USP_Task_CRUD]    Script Date: 1/10/2026 12:42:45 AM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[USP_Task_CRUD]
(
    @Action          NVARCHAR(20),
    @TaskId          INT            = NULL,
    @TaskTitle       NVARCHAR(200)  = NULL,
    @TaskDescription NVARCHAR(MAX)  = NULL,
    @TaskDueDate     DATETIME       = NULL,
    @TaskStatus      NVARCHAR(50)   = NULL,
    @TaskRemarks     NVARCHAR(500)  = NULL,
    @CreatedById     INT            = NULL,
    @CreatedByName   NVARCHAR(100)  = NULL,
    @UpdatedById     INT            = NULL,
    @UpdatedByName   NVARCHAR(100)  = NULL,
    @SearchText      NVARCHAR(200)  = NULL
)
AS
BEGIN
    SET NOCOUNT ON;

    IF (@Action = 'CREATE')
    BEGIN
        INSERT INTO Tasks
        (
            TaskTitle, TaskDescription, TaskDueDate,
            TaskStatus, TaskRemarks,
            CreatedOn, CreatedById, CreatedByName
        )
        VALUES
        (
            @TaskTitle, @TaskDescription, @TaskDueDate,
            @TaskStatus, @TaskRemarks,
            GETDATE(), @CreatedById, @CreatedByName
        );

        SELECT SCOPE_IDENTITY() AS NewTaskId;
        RETURN;
    END

    IF (@Action = 'READ_ALL')
    BEGIN
        SELECT *
        FROM Tasks
        ORDER BY CreatedOn DESC;
        RETURN;
    END

    IF (@Action = 'READ_BY_ID')
    BEGIN
        SELECT *
        FROM Tasks
        WHERE TaskId = @TaskId;
        RETURN;
    END

    IF (@Action = 'UPDATE')
    BEGIN
        UPDATE Tasks
        SET TaskTitle       = @TaskTitle,
            TaskDescription = @TaskDescription,
            TaskDueDate     = @TaskDueDate,
            TaskStatus      = @TaskStatus,
            TaskRemarks     = @TaskRemarks,
            LastUpdatedOn   = GETDATE(),
            UpdatedById     = @UpdatedById,
            UpdatedByName   = @UpdatedByName
        WHERE TaskId = @TaskId;

        SELECT @@ROWCOUNT AS RowsAffected;
        RETURN;
    END

    IF (@Action = 'DELETE')
    BEGIN
        DELETE FROM Tasks
        WHERE TaskId = @TaskId;

        SELECT @@ROWCOUNT AS RowsAffected;
        RETURN;
    END

    IF (@Action = 'SEARCH')
    BEGIN
        SELECT *
        FROM Tasks
        WHERE (@SearchText IS NULL OR @SearchText = '')
              OR TaskTitle LIKE '%' + @SearchText + '%'
              OR TaskDescription LIKE '%' + @SearchText + '%'
              OR TaskStatus LIKE '%' + @SearchText + '%'
        ORDER BY CreatedOn DESC;
        RETURN;
    END
END;

GO
